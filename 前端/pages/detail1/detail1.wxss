/* pages/detail1/detail1.wxss */
page{

  background:#DB7093;
}
.banner{
  display: block;
  width:100%;
  height: 500rpx;
}
.block{
  background:#fff;
  margin-top:15rpx;

}
.block-title{
  position:relative;
  font-size: 34rpx;
  line-height:1.5;
  color:#DB70DB;
  padding:10rpx 20rpx;
  text-indent:40rpx;

}
.block-title::after{
  position:absolute;
  left:10rpx;
  top:20rpx;
  content: "";
  width:12rpx;
  height:40rpx;
  background:#DB70DB;


}
.block-detail{
  display:block;
  color:#9932CD;
  line-height: 1.5;
  font-size:30rpx;
  padding:0 30rpx 30rpx;

}